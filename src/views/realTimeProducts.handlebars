<h1>Administrador de Productos</h1>
<a href="/home"><button>Volver</button></a>

<h2>Agregar Productos</h2>

<form id="addProduct" method="post">
        <label>Titulo</label>
        <input name="title">
        <label>Descripcion</label>
        <input name="description">
        <label>Precio</label>
        <input name="price" type="number">
        <label>Codigo</label>
        <input name="code">
        <label>Stock</label>
        <input name="stock" type="number">
        <label>Categoria</label>
        <input name="category">
        <input type="submit">
</form>

<h2>Eliminar Producto</h2>
    <form id="deleteProduct" method="post">
      <div>
        <label for="_id"><b>ID</b></label>
        <input name="_id">
      </div>
      <input type="submit">
    </form>
</div>

<h2>Productos</h2>
<table>
    <tr> 
        <th>ID</th>
        <th>Title</th>
        <th>Description</th> 
        <th>Price</th> 
        <th>Code</th> 
        <th>Stock</th> 
        <th>Category</th> 
    </tr>
    <tbody id="productsNow">
        {{#each productsList}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.category}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>

